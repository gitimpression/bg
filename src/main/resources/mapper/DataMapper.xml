<?xm1 version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bg.mapper.BgDataMapper">
    <sql id="BaseColumn">
        `id`,`key`,`value`,`value_id`
    </sql>
    <resultMap id="BaseResultMap" type="BgData">
        <id property="id" column="id" />
        <result property="key" column="key"/>
        <result property="value" column="value"/>
        <result property="valueId" column="value_id"/>
    </resultMap>

    <select id="getDataByConditions" resultMap="BaseResultMap">
        select <include refid="BaseColumn" /> from `data`
        <trim prefix="where" suffixOverrides="and|or">
            <if test="id != null and id != ''">
                `id` = #{id} and
            </if>
            <if test="key != null and key != ''">
                `key` = #{key} and
            </if>
            <if test="value != null and value != ''">
                `value` = #{value} and
            </if>
            <if test="valueId != null and valueId != ''">
                `value_id` = #{valueId}
            </if>
        </trim>
    </select>

    <select id="getAllData" resultMap="BaseResultMap">
        select <include refid="BaseColumn" /> from `data`
    </select>


</mapper>
