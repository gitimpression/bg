<?xm1 version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bg.mapper.PermissionMapper">
    <insert id="insertPermission">
        insert into `permission` (`id`,`name`,`remark`) values (null,#{name},#{remark})
    </insert>
    <update id="updatePermission">
        update `permission`
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null and name != ''">
                `name` = #{name},
            </if>
            <if test="remark != null and remark != ''">
                `remark` = #{remark},
            </if>
        </trim>
        where `id` = #{id}
    </update>
    <delete id="deletePermission">
        delete from `permission` where `id` = #{permissionId}
    </delete>
    <select id="getPermissionByUserId" resultType="com.bg.entity.Permission">
        select `name` from `permission`
    </select>
    <select id="getAllPermission" resultType="com.bg.entity.Permission">
        select * from `permission`
    </select>
</mapper>
