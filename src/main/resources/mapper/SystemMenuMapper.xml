<?xm1 version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bg.mapper.SystemMenuMapper">

    <resultMap id="SystemMenuResultMap" type="SystemMenu">
        <id property="id" column="id" />
        <result property="name" column="name" />
        <result property="url" column="url" />
        <result property="path" column="path" />
        <result property="component" column="component" />
        <result property="parentId" column="parent_id" />
        <result property="iconClz" column="icon_clz" />
        <result property="enabled" column="enabled" />
        <result property="keepAlive" column="keep_alive" />
        <result property="keepAlive" column="keep_alive" />
    </resultMap>
    <sql id="BaseColumn">
        `id`,`name`,`url`,`path`,`component`,`parent_id`,`icon_clz`,`enabled`,`keep_alive`
    </sql>
    <sql id="AllColumn">
        `id`,`name`,`url`,`path`,`component`,`parent_id`,`icon_clz`,`enabled`,`keep_alive`,`permission_id`
    </sql>
    <insert id="insertSystemMenu">
        insert into `sys_menu` (<include refid="AllColumn"/>)
        values (null,#{name},#{url},#{path},#{component},#{parentId},#{iconClz},#{enabled},#{keepAlive},#{permissionId})
    </insert>
    <update id="updateSystemMenu" parameterType="SystemMenu">
        update `sys_menu`
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null and name != ''">
                `name` = #{name} ,
            </if>
            <if test="url != null and url != ''">
                `url` = #{url} ,
            </if>
            <if test="path != null and path != ''">
                `path` = #{path} ,
            </if>
            <if test="component != null and component != ''">
                `component` = #{component} ,
            </if>
            <if test="parentId != null and parentId != ''">
                `parent_id` = #{parentId} ,
            </if>
            <if test="enabled != null and enabled != ''">
                `enabled` = #{enabled} ,
            </if>
            <if test="keepAlive != null and keepAlive != ''">
                `keep_alive` = #{keepAlive} ,
            </if>
            <if test="iconClz != null and iconClz != ''">
                `icon_clz` = #{iconClz} ,
            </if>
            <if test="permissionId != null and permissionId != ''">
                `permission_id` = #{permissionId} ,
            </if>
        </trim>
        where `id` = #{id}
    </update>
    <delete id="deleteSystemMenu">
        delete from `sys_menu` where `id` = #{systemMenuId}
    </delete>

    <select id="getSystemMenuByRoleId" resultMap="SystemMenuResultMap">
<!--    根据用户角色获取权限-->
        select <include refid="BaseColumn" /> from `sys_menu`
        where `permission_id` in (select `permission_id` from `role_permission` where `role_id` = #{roleId})
    </select>
    <select id="getAllSystemMenu" resultMap="SystemMenuResultMap">
        select * from `sys_menu`
    </select>
</mapper>
